<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dua">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:background="#45ff"
        tools:ignore="MissingConstraints">

        <TableRow android:background="#22fff">
            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Open ..." />
            <TextView
                android:layout_gravity="right"
                android:padding="3dip"
                android:text="Ctrl + O" />
        </TableRow>
        <TableRow android:background="#22fff">
            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Save ..." />
            <TextView
                android:layout_gravity="right"
                android:padding="3dip"
                android:text="Ctrl + S" />
        </TableRow>
        <TableRow android:background="#22fff">
            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Open ..." />
            <TextView
                android:layout_gravity="right"
                android:padding="3dip"
                android:text="Ctrl + O" />
        </TableRow>
        <TableRow android:background="#22fff">
            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Save ..." />
            <TextView
                android:layout_gravity="right"
                android:padding="3dip"
                android:text="Ctrl + S" />
        </TableRow>
        <TableRow android:background="#ff45">
            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="X ..." />
            <TextView
                android:layout_gravity="right"
                android:padding="3dip"
                android:text="Import" />
        </TableRow>
        <TableRow android:background="#ff45">
            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Export" />
            <TextView
                android:layout_gravity="right"
                android:padding="3dip"
                android:text="Ctrl + e" />
        </TableRow>
        <TableRow android:background="#CDDC39">
            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Quit" />
            <TextView
                android:layout_gravity="right"
                android:padding="3dip"
                android:text="Ctrl + Q" />
        </TableRow>






    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>